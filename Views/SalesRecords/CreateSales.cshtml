@model SalesWebMvc.Models.ViewModels.SalesRecordFormViewModel
@{
    ViewData["Title"] = "CreateSales";
}

<h1>@ViewData["Title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSales">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Sales.Date" class="control-label">

                </label>
                <input asp-for="Sales.Date" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Sales.Amount" class="control-label">

                </label>
                <input asp-for="Sales.Amount" class="form-control" />


            </div>
            <div class="form-group">
                <label asp-for="Sales.Status" class="control-label">

                </label>
                <select asp-for="Sales.Status" class="form-control">
                    <option value="0">Pending</option>
                    <option value="1">Billed</option>
                    <option value="2">Canceled</option>
                </select>

                <div class="form-group">
                    <label asp-for=" Sales.SellerId" class="control-label"></label>
                    <select asp-for="Sales.SellerId" asp-items="@(new SelectList(Model.Sellers,"Id","Name"))" class="form-control">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for=" Seller.DepartmentId" class="control-label"></label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}